<div class="text-center login vh-100 position-relative">
  <%= render "layouts/header" %>
  <div class="position-absolute top-50 start-50 translate-middle">

    <div class="col-sm-12 position-relative">
      <%#= image_tag "sign_bg.png", width: "", class: "img-fluid min-width-img" %>
      <div class="position-absolute top-50 start-50 translate-middle p-5 form-bg">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-3">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email address", class: "form-control-lg border-0 login_btn_bg text-light input-outline-none rounded-5" %>
          </div>

          <div class="mb-3">
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "Passpord", class: "form-control-lg border-0 login_btn_bg text-light input-outline-none rounded-5" %>
          </div>

          <!-- <% if devise_mapping.rememberable? %>
            <div class="">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %> -->

          <div class="actions">
            <%= f.submit "Log in", class: "form-control btn btn-lg border-0 shadow-none login_btn_bg text-light input-outline-none rounded-5" %>
          </div>
        <% end %>

        <%= render "users/shared/links" %>

      </div>
    </div>

  </div>
</div>


