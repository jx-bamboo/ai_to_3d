      <%= image_tag "h_logo_4x.png", width: "50", alt: "Logo" %>
      <%#= image_tag("h_logo.png", srcset: { "h_logo_2x.png" => "2x", "h_logo_4x.png" => "4x" }) %>
    <% end %>
    <%#= controller.controller_name + controller.action_name %>
    <%#= image_tag "h_logo_zaat3d2x.png", width: "190", alt: "Logo" %>
  </div>

  <div class="pe-2 nav navbar">
    <% unless user_signed_in? %>
      <a href="/login" class="text-light me-2 text-decoration-none head_login_btn_bg nav">
        <span class="">Log in</span>
      </a>
    <% end %>

    <!-- <li class="nav-item dropdown cred">
